{
  "name": "trading-info-miniapp",
  "version": "1.0.0",
  "description": "Telegram Mini App for educational content with Obsidian-like interface",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "dev:refactored": "concurrently \"nodemon server.refactored.js\" \"cd client && npm start\"",
    "build": "cd client && npm install && npm run build",
    "start": "node server.js",
    "start:refactored": "node server.refactored.js",
    "install-client": "cd client && npm install",
    "install-all": "npm install && cd client && npm install",
    "serve": "npm run build && npm start",
    "serve:refactored": "npm run build && npm run start:refactored",
    "postinstall-disabled": "npm run build",
    "lint": "eslint server/**/*.js",
    "lint:fix": "eslint server/**/*.js --fix",
    "format": "prettier --write server/**/*.js *.js",
    "format:check": "prettier --check server/**/*.js *.js",
    "test:client": "cd client && npm test",
    "lint:all": "npm run lint && cd client && npm run lint",
    "format:all": "npm run format && cd client && npm run format",
    "db:migrate": "node server/db/migrate.js migrate",
    "db:rollback": "node server/db/migrate.js rollback",
    "db:status": "node server/db/migrate.js status",
    "docker:db": "docker-compose up postgres redis -d",
    "docker:tools": "docker-compose --profile tools up -d",
    "docker:down": "docker-compose down",
    "setup:dev": "npm run docker:db && sleep 10 && npm run db:migrate && npm run dev"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "iconv-lite": "^0.7.0",
    "marked": "^5.1.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "redis": "^4.7.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5"
  },
  "private": true
}
